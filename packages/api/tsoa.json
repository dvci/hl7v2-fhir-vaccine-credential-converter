{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*controller.ts"],
  "spec": {
    "basePath": "/api/v1",
    "outputDirectory": "generated",
    "specVersion": 3,
    "specMerging": "recursive",
    "spec": {
      "paths": {
        "/convert/text": {
          "post": {
            "requestBody": {
              "content": {
                "text/plain": {
                  "schema": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "routes": {
    "basePath": "/api/v1",
    "routesDir": "generated"
  }
}