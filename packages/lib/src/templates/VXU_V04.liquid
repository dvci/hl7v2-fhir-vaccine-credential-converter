{
    "resourceType": "Bundle",
    "type": "collection",
    "entry": [
        {% if PID %}
        {
            "fullUrl" : "resource:0",
            "resource": {% include 'PID' with PID %}
        }
        {% endif %}
        {% for order in ORDER %}
            {% if forloop.first == true %}
                {% if PID %},{% endif %}
            {% else %},{% endif %}
            {
                "fullUrl" : "resource:{{ forloop.index }}",
                "resource": {% include 'ORC' with order %}
            }
        {% endfor %}
    ]
}        